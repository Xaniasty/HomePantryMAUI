<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomePantry.Structure.Views.FormPage">
    <StackLayout>
        <Entry Text="{Binding Name}" Placeholder="Nazwa" />
        <Editor Text="{Binding Opis}" Placeholder="Opis" />
        <Button Text="Zapisz" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>