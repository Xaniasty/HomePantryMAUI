<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HomePantry"
             xmlns:converters="clr-namespace:HomePantry.Conventers"
             x:Class="HomePantry.App">
    <Application.Resources>
        <ResourceDictionary>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <Color x:Key="PrimaryColor">#272e45</Color>
            <Color x:Key="SecondaryColor">#d8d1ba</Color>
            <Color x:Key="BackgroundColor">#d8d1ba</Color>
            <Color x:Key="TextColor">#000000</Color>
            <Color x:Key="PrimaryTextColor">#000000</Color>
            <Color x:Key="SecondaryTextColor">#666666</Color>
            <Color x:Key="PageBackgroundColor">#F5F5F5</Color>
            <Color x:Key="CardBackgroundColor">#FFFFFF</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>